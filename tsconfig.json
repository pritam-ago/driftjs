{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
  "moduleResolution": "node16", // Use node16 for Node.js projects
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["packages/*/src"]
}